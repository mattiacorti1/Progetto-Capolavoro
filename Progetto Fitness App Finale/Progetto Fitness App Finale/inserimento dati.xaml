<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Progetto_Fitness_App_Finale.inserimento_dati"
             Title="inserimento_dati"
             Shell.NavBarIsVisible="True">
    <ScrollView>
        <VerticalStackLayout Padding="30"
                Spacing="20"
                HorizontalOptions="FillAndExpand">

            
            <Label
                Text="Inserimento Dati"
                FontSize="32"
                HorizontalOptions="Center"
                FontAttributes="Bold"
                TextColor="#222222"
                Margin="0,10,0,20"/>

          
            <Entry
                x:Name="AgeEntry"
                Placeholder="EtÃ "
                BackgroundColor="#F5F5F5"
                HeightRequest="50"
                Keyboard="Numeric"
                TextColor="Black"
                PlaceholderColor="Gray"
                HorizontalOptions="Fill"/>

         
            <Entry
                x:Name="WeightEntry"
                Placeholder="Peso"
                BackgroundColor="#F5F5F5"
                HeightRequest="50"
                Keyboard="Numeric"
                TextColor="Black"
                PlaceholderColor="Gray"
                HorizontalOptions="Fill"/>

           
            <Entry
                x:Name="HeightEntry"
                Placeholder="Altezza"
                BackgroundColor="#F5F5F5"
                HeightRequest="50"
                Keyboard="Numeric"
                TextColor="Black"
                PlaceholderColor="Gray"
                HorizontalOptions="Fill"/>

            
            <Picker
                x:Name="GenderPicker"
                Title="Sesso"
                BackgroundColor="#F5F5F5"
                HeightRequest="50"
                TextColor="Black"
                HorizontalOptions="Fill">
                <Picker.Items>
                    <x:String>Maschio</x:String>
                    <x:String>Femmina</x:String>
                    <x:String>Altro</x:String>
                </Picker.Items>
            </Picker>

            <Picker
                x:Name="ActivityLevelPicker"
                Title="Livello di attivitÃ "
                BackgroundColor="#F5F5F5"
                HeightRequest="50"
                TextColor="Black"
                HorizontalOptions="Fill">
                <Picker.Items>
                    <x:String>Bassa</x:String>
                    <x:String>Moderata</x:String>
                    <x:String>Alta</x:String>
                </Picker.Items>
            </Picker>

          
            <Picker
                x:Name="TargetPicker"
                Title="Obiettivo"
                BackgroundColor="#F5F5F5"
                HeightRequest="50"
                TextColor="Black"
                HorizontalOptions="Fill">
                <Picker.Items>
                    <x:String>Perdere peso</x:String>
                    <x:String>Mantenere peso</x:String>
                    <x:String>Aumentare massa</x:String>
                </Picker.Items>
            </Picker>

       
            <Entry
                x:Name="AllergieEntry"
                Placeholder="Allergie/Preferenze"
                BackgroundColor="#F5F5F5"
                HeightRequest="50"
                Keyboard="Text"
                TextColor="Black"
                PlaceholderColor="Gray"
                HorizontalOptions="Fill"/>

            
            <Button
                Text="Invia Dati"
                Clicked="OnSubmitClicked"
                BackgroundColor="#4A90E2"
                TextColor="White"
                HeightRequest="50"
                CornerRadius="25"
                FontAttributes="Bold"
                Margin="0,10,0,30"
                HorizontalOptions="Fill"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>